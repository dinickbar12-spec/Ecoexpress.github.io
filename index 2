    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true
        });

        // Google Sheets Configuration
        // URL de tu Google Apps Script
        const API_URL = 'https://script.google.com/macros/s/AKfycbxdipcT_UF92Cb_OGdjqHlJnqq7Yqp0mbqqsUvVYk-Wt7yAHufqucXdAbtbnnOBQ7LLMQ/exec';
        
        // Google Sheets Status
        let sheetsConnected = false;
        let sheetsSyncInProgress = false;

        // Hero slider functionality
        let currentSlide = 0;
        const slides = document.querySelectorAll('.hero-image');
        const indicators = document.querySelectorAll('.indicator');

        function changeSlide(index) {
            slides[currentSlide].classList.remove('active');
            indicators[currentSlide].classList.remove('active');
            
            currentSlide = index;
            
            slides[currentSlide].classList.add('active');
            indicators[currentSlide].classList.add('active');
        }

        function nextSlide() {
            changeSlide((currentSlide + 1) % slides.length);
        }

        // Auto-change slides every 5 seconds
        setInterval(nextSlide, 5000);

        // Services data
        const services = [
            { id: 'daily-clothes', name: 'Lavado de Ropa Uso Diario', price: 6000, unit: 'kilo' },
            { id: 'bedding', name: 'Lavado de Cobijas, Sábanas', price: 8000, unit: 'kilo' },
            { id: 'curtains', name: 'Lavado de Cortinas', price: 8000, unit: 'kilo' },
            { id: 'special-suits', name: 'Lavado de Trajes Especiales', price: 15000, unit: 'prenda' },
            { id: 'shoes', name: 'Lavado de Tenis', price: 15000, unit: 'par' },
            { id: 'helmets', name: 'Lavado de Cascos de Moto', price: 15000, unit: 'casco' }
        ];

        // Initialize the services list
        function initializeServices() {
            const servicesList = document.getElementById('servicesList');
            
            services.forEach(service => {
                const serviceItem = document.createElement('div');
                serviceItem.className = 'item-card';
                serviceItem.innerHTML = `
                    <div class="item-info">
                        <div class="item-name">${service.name}</div>
                        <div class="item-price">$${service.price.toLocaleString('es-CO')} por ${service.unit}</div>
                    </div>
                    <div class="item-actions">
                        <div class="quantity-input">
                            <button type="button" class="quantity-btn" onclick="decreaseQuantity('${service.id}')">
                                <i class="fas fa-minus"></i>
                            </button>
                            <div class="quantity-value" id="quantity-${service.id}">0</div>
                            <button type="button" class="quantity-btn" onclick="increaseQuantity('${service.id}')">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                `;
                servicesList.appendChild(serviceItem);
            });
        }

        // Increase quantity
        function increaseQuantity(serviceId) {
            const quantityElement = document.getElementById(`quantity-${serviceId}`);
            let quantity = parseInt(quantityElement.textContent);
            quantity++;
            quantityElement.textContent = quantity;
            updateTotal();
        }

        // Decrease quantity
        function decreaseQuantity(serviceId) {
            const quantityElement = document.getElementById(`quantity-${serviceId}`);
            let quantity = parseInt(quantityElement.textContent);
            if (quantity > 0) {
                quantity--;
                quantityElement.textContent = quantity;
                updateTotal();
            }
        }

        // Update total amount
        function updateTotal() {
            let total = 0;
            
            services.forEach(service => {
                const quantityElement = document.getElementById(`quantity-${service.id}`);
                const quantity = parseInt(quantityElement.textContent);
                total += quantity * service.price;
            });
            
            document.getElementById('totalAmount').textContent = `$${total.toLocaleString('es-CO')}`;
            
            return total;
        }

        // Delivery option selection
        let selectedDeliveryOption = '';

        function selectDeliveryOption(option) {
            // Remove selected class from all options
            document.getElementById('delivery-home').classList.remove('selected');
            document.getElementById('delivery-store').classList.remove('selected');
            
            // Add selected class to chosen option
            document.getElementById(`delivery-${option}`).classList.add('selected');
            
            selectedDeliveryOption = option;
            
            // Show/hide address field based on selection
            const addressRow = document.getElementById('addressRow');
            const addressRequired = document.getElementById('addressRequired');
            const customerAddress = document.getElementById('customerAddress');
            
            if (option === 'home') {
                addressRow.style.display = 'flex';
                addressRequired.style.display = 'inline';
                customerAddress.required = true;
            } else {
                addressRow.style.display = 'none';
                addressRequired.style.display = 'none';
                customerAddress.required = false;
                customerAddress.value = '';
            }
        }

        // Proceed to payment
        function proceedToPayment() {
            // Validate form
            const customerName = document.getElementById('customerName').value;
            const customerPhone = document.getElementById('customerPhone').value;
            const customerAddress = document.getElementById('customerAddress').value;
            
            if (!customerName || !customerPhone) {
                showToast('Por favor completa todos los campos obligatorios', 'error');
                return;
            }
            
            if (!selectedDeliveryOption) {
                showToast('Por favor selecciona un tipo de entrega', 'error');
                return;
            }
            
            // Check if address is required for home delivery
            if (selectedDeliveryOption === 'home' && !customerAddress) {
                showToast('Por favor ingresa tu dirección de entrega', 'error');
                return;
            }
            
            // Check if at least one service is selected
            let hasServices = false;
            services.forEach(service => {
                const quantityElement = document.getElementById(`quantity-${service.id}`);
                const quantity = parseInt(quantityElement.textContent);
                if (quantity > 0) {
                    hasServices = true;
                }
            });
            
            if (!hasServices) {
                showToast('Por favor selecciona al menos un servicio', 'error');
                return;
            }
            
            // Show loader
            showLoader();
            
            // Simulate processing
            setTimeout(() => {
                hideLoader();
                
                // Hide order form and show payment section
                document.getElementById('order-form').style.display = 'none';
                document.getElementById('payment-section').style.display = 'block';
                
                // Update totals in payment section
                const total = updateTotal();
                document.getElementById('cash-total').textContent = `$${total.toLocaleString('es-CO')}`;
                document.getElementById('nequi-total').textContent = `$${total.toLocaleString('es-CO')}`;
                
                // Scroll to payment section
                document.getElementById('payment-section').scrollIntoView({ behavior: 'smooth' });
                
                showToast('Procede con el método de pago', 'info');
            }, 1000);
        }

        // Select payment method
        function selectPaymentMethod(method) {
            // Hide all payment methods
            document.getElementById('cash-payment').style.display = 'none';
            document.getElementById('nequi-payment').style.display = 'none';
            
            // Show selected payment method
            if (method === 'cash') {
                document.getElementById('cash-payment').style.display = 'block';
            } else if (method === 'nequi') {
                document.getElementById('nequi-payment').style.display = 'block';
            }
        }

        // Confirm payment
        function confirmPayment(method) {
            showLoader();
            
            setTimeout(() => {
                hideLoader();
                
                // Generate random order number
                const orderNumber = 'ORD' + Math.floor(Math.random() * 100000);
                document.getElementById('orderNumber').textContent = orderNumber;
                
                // Prepare order data for Google Sheets
                const orderData = prepareOrderData(orderNumber, method);
                
                // Show success modal
                const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                successModal.show();
                
                // Send data to Google Sheets
                sendOrderToGoogleSheets(orderData);
                
                // Reset form after modal is closed
                document.getElementById('successModal').addEventListener('hidden.bs.modal', function () {
                    resetForm();
                    // Scroll to top
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
                
                showToast('¡Pedido confirmado exitosamente!', 'success');
            }, 2000);
        }

        // Prepare order data for Google Sheets
        function prepareOrderData(orderNumber, paymentMethod) {
            const customerName = document.getElementById('customerName').value;
            const customerPhone = document.getElementById('customerPhone').value;
            const customerEmail = document.getElementById('customerEmail').value;
            const customerAddress = document.getElementById('customerAddress').value;
            const deliveryType = selectedDeliveryOption === 'home' ? 'A Domicilio' : 'Punto Físico';
            const currentDate = new Date().toLocaleString('es-CO');
            
            // Get selected services
            const selectedServices = [];
            let totalAmount = 0;
            
            services.forEach(service => {
                const quantityElement = document.getElementById(`quantity-${service.id}`);
                const quantity = parseInt(quantityElement.textContent);
                if (quantity > 0) {
                    selectedServices.push({
                        name: service.name,
                        quantity: quantity,
                        price: service.price,
                        unit: service.unit,
                        subtotal: quantity * service.price
                    });
                    totalAmount += quantity * service.price;
                }
            });
            
            // Format services as a string
            const servicesString = selectedServices.map(s => 
                `${s.name} (${s.quantity} ${s.unit})`
            ).join(', ');
            
            return {
                orderNumber,
                customerName,
                customerPhone,
                customerEmail,
                customerAddress,
                deliveryType,
                paymentMethod: paymentMethod === 'cash' ? 'Efectivo' : 'Nequi QR',
                services: servicesString,
                totalAmount,
                orderDate: currentDate,
                status: 'Pendiente'
            };
        }

        // Send order data to Google Sheets
        function sendOrderToGoogleSheets(orderData) {
            sheetsSyncInProgress = true;
            updateSheetsStatus('syncing');
            
            // Create a URL-encoded string
            const params = new URLSearchParams();
            params.append('orderNumber', orderData.orderNumber);
            params.append('customerName', orderData.customerName);
            params.append('customerPhone', orderData.customerPhone);
            params.append('customerEmail', orderData.customerEmail);
            params.append('customerAddress', orderData.customerAddress);
            params.append('deliveryType', orderData.deliveryType);
            params.append('paymentMethod', orderData.paymentMethod);
            params.append('services', orderData.services);
            params.append('totalAmount', orderData.totalAmount);
            params.append('orderDate', orderData.orderDate);
            params.append('status', orderData.status);
            
            // Log the data being sent for debugging
            console.log('Enviando datos a Google Sheets:', orderData);
            
            // Send data to Google Sheets usando el método que funciona en Netlify
            sendToSheetsWithNetlifyForms(params);
        }

        // Método alternativo para Netlify que funciona con CORS
        function sendToSheetsWithNetlify(params) {
            // Crear un iframe oculto para enviar el formulario
            const iframe = document.createElement('iframe');
            iframe.style.display = 'none';
            document.body.appendChild(iframe);
            
            iframe.onload = function() {
                const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                
                // Crear un formulario en el iframe
                const form = iframeDoc.createElement('form');
                form.method = 'POST';
                form.action = API_URL;
                form.target = '_blank';
                
                // Agregar todos los parámetros como campos ocultos
                for (const [key, value] of params.entries()) {
                    const input = iframeDoc.createElement('input');
                    input.type = 'hidden';
                    input.name = key;
                    input.value = value;
                    form.appendChild(input);
                }
                
                // Enviar el formulario
                form.submit();
                
                // Mostrar mensaje de éxito después de un tiempo
                setTimeout(() => {
                    updateSheetsStatus('success');
                    sheetsConnected = true;
                    
                    // Actualizar el estado en el modal
                    const syncStatusElement = document.getElementById('sheetsSyncStatus');
                    if (syncStatusElement) {
                        syncStatusElement.innerHTML = '<i class="fas fa-check-circle text-success me-2"></i><span>Pedido guardado en Google Sheets</span>';
                    }
                    
                    sheetsSyncInProgress = false;
                    
                    // Eliminar el iframe
                    setTimeout(() => {
                        document.body.removeChild(iframe);
                    }, 3000);
                }, 2000);
            };
            
            document.body.appendChild(iframe);
        }

        // Update Google Sheets connection status
        function updateSheetsStatus(status) {
            const sheetsStatus = document.getElementById('sheetsStatus');
            const sheetsStatusText = document.getElementById('sheetsStatusText');
            
            if (!sheetsStatus || !sheetsStatusText) return;
            
            switch (status) {
                case 'syncing':
                    sheetsStatus.className = 'sheets-status';
                    sheetsStatusText.textContent = 'Sincronizando con Google Sheets...';
                    sheetsStatus.style.display = 'flex';
                    break;
                case 'success':
                    sheetsStatus.className = 'sheets-status';
                    sheetsStatusText.textContent = 'Conectado a Google Sheets';
                    sheetsStatus.style.display = 'flex';
                    
                    // Hide after 3 seconds
                    setTimeout(() => {
                        sheetsStatus.style.display = 'none';
                    }, 3000);
                    break;
                case 'error':
                    sheetsStatus.className = 'sheets-status error';
                    sheetsStatusText.textContent = 'Error al conectar con Google Sheets';
                    sheetsStatus.style.display = 'flex';
                    
                    // Hide after 5 seconds
                    setTimeout(() => {
                        sheetsStatus.style.display = 'none';
                    }, 5000);
                    break;
            }
        }

        // Back to form
        function backToForm() {
            document.getElementById('payment-section').style.display = 'none';
            document.getElementById('order-form').style.display = 'block';
            document.getElementById('order-form').scrollIntoView({ behavior: 'smooth' });
        }

        // Reset form
        function resetForm() {
            document.getElementById('orderForm').reset();
            
            // Reset delivery option
            document.getElementById('delivery-home').classList.remove('selected');
            document.getElementById('delivery-store').classList.remove('selected');
            selectedDeliveryOption = '';
            document.getElementById('addressRow').style.display = 'flex';
            document.getElementById('addressRequired').style.display = 'inline';
            document.getElementById('customerAddress').required = false;
            
            // Reset all quantities
            services.forEach(service => {
                const quantityElement = document.getElementById(`quantity-${service.id}`);
                quantityElement.textContent = '0';
            });
            
            // Update total
            updateTotal();
            
            // Hide payment section and show order form
            document.getElementById('payment-section').style.display = 'none';
            document.getElementById('order-form').style.display = 'block';
        }

        // Toggle theme
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            
            body.classList.toggle('dark-mode');
            
            if (body.classList.contains('dark-mode')) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
                localStorage.setItem('theme', 'dark');
            } else {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
                localStorage.setItem('theme', 'light');
            }
        }

        // Load saved theme
        function loadTheme() {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('themeIcon');
            
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-mode');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            }
        }

        // Show loader
        function showLoader() {
            document.getElementById('loader').style.display = 'flex';
        }

        // Hide loader
        function hideLoader() {
            document.getElementById('loader').style.display = 'none';
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            
            let icon = '';
            if (type === 'success') {
                icon = 'fa-check-circle';
            } else if (type === 'error') {
                icon = 'fa-exclamation-circle';
            } else {
                icon = 'fa-info-circle';
            }
            
            toast.innerHTML = `
                <div class="toast-icon">
                    <i class="fas ${icon}"></i>
                </div>
                <div class="toast-message">${message}</div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Remove toast after 3 seconds
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => {
                    toast.remove();
                }, 300);
            }, 3000);
        }

        // Mobile menu toggle
        document.getElementById('mobileMenuToggle').addEventListener('click', function() {
            const navMenu = document.getElementById('navMenu');
            navMenu.classList.toggle('active');
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
            
            // Update progress bar
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + '%';
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            initializeServices();
            loadTheme();
            
            // Initialize form with address required by default
            document.getElementById('addressRequired').style.display = 'inline';
            document.getElementById('customerAddress').required = false;
            
            // Show welcome message
            setTimeout(() => {
                showToast('¡Bienvenido a Lavandería ECO EXPRESS en Líbano, Tolima!', 'info');
            }, 1000);
        });
    </script>
</body>
</html>